            {#            </div>#}

            <div class="tab-content background-pattern">

                <div class="tab-pane fade in show" id="modalRegister" role="tabpanel">
                    <div class="modal-body">

                        <div class="col-lg-10 offset-lg-1 center">
                            <div class="user-type custom-control custom-radio custom-control-inline">
                                <input type="radio" id="employer_input" name="user_type_form" class="custom-control-input" value="employer_input" checked>
                                <label class="custom-control-label" for="employer_input">Je suis professionnel</label>
                            </div>
                            <div class="user-type custom-control custom-radio custom-control-inline">
                                <input type="radio" id="seasonal_input" name="user_type_form" class="custom-control-input" value="seasonal_input">
                                <label class="custom-control-label" for="seasonal_input">Je suis saisonnier</label>
                            </div>
                        </div>

                        <br/>

                        {{ form_start(formEmployer) }}
                        <div class="col-lg-10 offset-lg-1" id="employer_type">
                            <div class="form-group">
                                <label>Nom de l'entreprise</label><br/>
                                <div class="input-form center">{{ form_widget(formEmployer.company) }}</div>
                            </div>
                            <div class="form-group">
                                <label>Personne à contacter</label><br/>
                                <div class="input-form center">{{ form_widget(formEmployer.contact) }}</div>
                            </div>
                            <div class="form-group">
                                <label>Votre e-mail</label><br/>
                                <div class="input-form center">{{ form_widget(formEmployer.email) }}</div>
                                <div class="input-form center">{{ form_errors(formEmployer.email) }}</div>
                            </div>
                            <div class="form-group">
                                <label>Indiquez un mot de passe</label><br/>
                                <div class="input-form center">{{ form_widget(formEmployer.plainPassword.first) }}</div>
                            </div>
                            <div class="form-group">
                                <label>Confirmez votre mot de passe</label><br/>
                                <div class="input-form center">{{ form_widget(formEmployer.plainPassword.second) }}</div>
                            </div>
                            <div class="form-group justify">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-1">
                                            {{ form_widget(formEmployer.registration) }}
                                        </div>
                                        <div class="col-lg-11">
                                            <label>En confirmant mon inscription, j'accepte que les informations saisies soient exploitées par My Season (pour plus d'informations, veuillez vous diriger vers les Conditions Générales d'Utilisation du site.</label><br/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="col-lg-12 btn btn-main round-button" name="employerSubmit">S'inscrire</button>
                        </div>
                        {{ form_end(formEmployer) }}

                        {{ form_start(formSeasonal) }}
                        <div class="col-lg-10 offset-lg-1" id="seasonal_type">
                            <div class="form-group">
                                <label>Votre prénom</label><br/>
                                <div class="input-form center">{{ form_widget(formSeasonal.firstname) }}</div>
                            </div>
                            <div class="form-group">
                                <label>Votre nom</label><br/>
                                <div class="input-form center">{{ form_widget(formSeasonal.lastname) }}</div>
                            </div>
                            <div class="form-group">
                                <label>Lien de votre profil LinkedIn</label><br/>
                                <div class="input-form center">{{ form_widget(formSeasonal.resumeLink) }}</div>
                            </div>
                            {#                                    <div class="form-group">#}
                            {#                                        <label>Votre image de profil</label><br/>#}
                            {#                                        <div class="input-form center">{{ form_widget(formSeasonal.file) }}</div>#}
                            {#                                    </div>#}
                            <div class="form-group">
                                <label>Votre e-mail</label><br/>
                                <div class="input-form center">{{ form_widget(formSeasonal.email) }}</div>
                                <div class="input-form center">{{ form_errors(formSeasonal.email) }}</div>
                            </div>
                            <div class="form-group">
                                <label>Indiquez un mot de passe</label><br/>
                                <div class="input-form center">{{ form_widget(formSeasonal.plainPassword.first) }}</div>
                            </div>
                            <div class="form-group">
                                <label>Confirmez votre mot de passe</label><br/>
                                <div class="input-form center">{{ form_widget(formSeasonal.plainPassword.second) }}</div>
                            </div>
                            <div class="form-group justify">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-1">
                                            {{ form_widget(formSeasonal.registration) }}
                                        </div>
                                        <div class="col-lg-11">
                                            <label>En confirmant mon inscription, j'accepte que les informations saisies soient exploitées par My Season (pour plus d'informations, veuillez vous diriger vers les Conditions Générales d'Utilisation du site.</label><br/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="col-lg-12 btn btn-main round-button" name="seasonalSubmit">S'inscrire</button>
                        </div>
                        {{ form_end(formSeasonal) }}

                    </div>

