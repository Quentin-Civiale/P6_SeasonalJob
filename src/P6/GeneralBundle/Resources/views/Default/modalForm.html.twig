                <div class="tab-pane fade in show active" id="modalLogin" role="tabpanel">
                    <div class="modal-body">

                        <form action="{{ path('login') }}" method="post">
                            {% if error %}
                                <div class="alert alert-danger">
                                    {#                                    {{ error.messageKey|trans(error.messageData, 'security') }}#}
                                    Votre e-mail ou votre mot de passe est incorrect !
                                </div>
                            {% endif %}

                            {{ form_start(formLogin) }}
                            <div class="col-lg-10 offset-lg-1" id="login_type">
                                <div class="form-group">
                                    <label>Votre e-mail :</label><br/>
                                    <div class="input-form center">{{ form_widget(formLogin._username) }}</div>
                                </div>
                                <div class="form-group">
                                    <label>Votre mot de passe :</label><br/>
                                    <div class="input-form center">{{ form_widget(formLogin._password) }}</div>
                                </div>
                                <br/>
                                <button type="submit" class="col-lg-12 btn btn-connect round-button">Se connecter</button>
                            </div>
                            {{ form_end(formLogin) }}
                        </form>

                    </div>

