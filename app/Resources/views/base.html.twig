    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('general_homepage') }}">
            <img src="{{ asset('Images/rdv_logo3.png') }}" width="35" height="35" class="d-inline-block align-top" alt="">
        </a>
        <div class="title-animation-header">
            <h1>- My -</h1>
            <h2>Season</h2>
        </div>
        <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar-nav mr-auto center">
                <div class="nav-item">
                    <a class="btn btn-menu" href="{{ path('general_homepage') }}" role="button">Accueil</a>
                </div>
                &nbsp;
                <div class="nav-item">
                    <a class="btn btn-menu" href="{{ path('general_ad_list') }}" role="button">Les Annonces</a>
                </div>
            </div>

            &nbsp;

            {% if is_granted('ROLE_USER') %}
                <div class="dropdown show">
                    <a class="btn btn-account" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Mon Compte&nbsp;<i class="fas fa-caret-down"></i>
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">Mes informations</a>
                        <a class="dropdown-item" href="{{ path('user_ad') }}">Mes annonces</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item btn-danger white-text" href="{{ path('logout') }}">
                            Déconnexion&nbsp;<i class="fas fa-sign-out-alt"></i>
                        </a>
                    </div>
                </div>
            {% else %}
                <button class="btn btn-register" data-toggle="modal" data-target="#ModalForm">
                    Inscription&nbsp;<i class="fas fa-user-plus"></i>
                </button>
                &nbsp;
                <div class="login_button">
                    <a class="btn btn-success" href="{{ path('login') }}" role="button">
                        Connexion&nbsp;<i class="fas fa-sign-in-alt"></i></a>
                </div>
            {% endif %}

            &nbsp;

            <div class="ads_button">
                <a class="btn btn-primary logoColor-background border-logoColor-border" href="{{ path('posting_ad') }}" role="button">Publier une annonce</a>
            </div>
        </div>
    </nav>

    {% block navigation %}{% endblock %}
    <br><br><br>
    {% block home %} {% endblock %}
    {% block postingAd %} {% endblock %}
    {% block loginForm %} {% endblock %}
    {% block userAccount %} {% endblock %}
    {% block employerAccount %} {% endblock %}
    {% block seasonalAccount %} {% endblock %}
    {% block userAd %} {% endblock %}
    {% block adList %} {% endblock %}
    {% block adDetail %} {% endblock %}
    {% block employerCharter %} {% endblock %}
    {% block seasonalCharter %} {% endblock %}

    <br/>

    <footer>
        <div class="card white-text">
            <div class="card-body logoColor-background">
                <div class="row col-lg-8 offset-lg-2">
                    <div class="title-website col-lg-3 col-sm-3">
{#                            <h3 class="card-title white-text"><strong>Seasonal Job</strong></h3>#}
                        <div class="row">
                            <a class="navbar-brand" href="{{ path('general_homepage') }}">
                                <img src="{{ asset('Images/rdv_logo4.png') }}" width="35" height="35" class="d-inline-block align-top" alt="">
                            </a>
                            <div class="title-footer">
                                <h1>- My -</h1>
                                <h2>Season</h2>
                            </div>
                        </div>
                        <hr>
                        <h5 class="card-text">Mettre en relation saisonniers et employeurs !</h5>
                        <hr>
                    </div>
                    <div class="col-lg-3 col-sm-3">
                        <h5><strong>Plus d'infos</strong></h5>
                        <div class="footer-white-line"></div>
                        <ul>
                            <li><a href="" class="footer-link" data-toggle="modal" data-target="#modalLRForm">Se connecter</a></li>
                            <li><a href="{{ path('seasonal_charter') }}" class="footer-link">Charte du saisonnier</a></li>
                            <li><a href="{{ path('employer_charter') }}" class="footer-link">Charte de l'employeur</a></li>
                            <li><a href="#" class="footer-link">Sécurité</a> et <a href="#" class="footer-link">CGU</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-sm-3">
                        <h5><strong>Contacts</strong></h5>
                        <div class="footer-white-line"></div>
                        <ul>
                            <li><a href="#" class="footer-link">Nous contacter</a></li>
{#                                <li><a href="#" class="footer-link">Kit Presse</a></li>#}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
