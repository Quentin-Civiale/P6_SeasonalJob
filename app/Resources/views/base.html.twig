<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="UTF-8" />
        <title>{% block title %}My Season{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('Images/rdv_logo3.png') }}" />
        <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}" />
        <link type="text/css" rel="stylesheet" href="{{ asset('css/website_title.css') }}" />
